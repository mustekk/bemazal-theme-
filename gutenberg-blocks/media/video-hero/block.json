{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "bemazal/video-hero",
  "title": "Видео Hero",
  "category": "bemazal",
  "icon": "video-alt3",
  "description": "Блок для показа видео в формате hero с поддержкой нескольких слайдов, текстом и кнопкой. Оптимизирован для WebM и MP4 форматов с адаптивным видео для десктопа и мобильных.",
  "keywords": [
    "video",
    "hero",
    "background",
    "slider",
    "видео"
  ],
  "supports": {
    "align": [
      "wide",
      "full"
    ],
    "anchor": true,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "slides": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object"
      }
    },
    "autoplay": {
      "type": "boolean",
      "default": true
    },
    "autoplayDelay": {
      "type": "number",
      "default": 5000
    },
    "speed": {
      "type": "number",
      "default": 1000
    },
    "loop": {
      "type": "boolean",
      "default": true
    },
    "pagination": {
      "type": "boolean",
      "default": true
    },
    "navigation": {
      "type": "boolean",
      "default": true
    },
    "videoLoop": {
      "type": "boolean",
      "default": true
    },
    "videoMuted": {
      "type": "boolean",
      "default": true
    },
    "showSoundButton": {
      "type": "boolean",
      "default": true
    },
    "showScrollButton": {
      "type": "boolean",
      "default": true
    },
    "minHeight": {
      "type": "number",
      "default": 600
    },
    "overlayOpacity": {
      "type": "number",
      "default": 0.3
    },
    "textColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "contentAlign": {
      "type": "string",
      "default": "center"
    },
    "contentVerticalAlign": {
      "type": "string",
      "default": "center"
    }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css",
  "version": "1.2.0"
}
