{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "bemazal/image-hero",
  "title": "Изображение Hero",
  "category": "bemazal",
  "icon": "format-image",
  "description": "Блок для показа изображений в формате hero с поддержкой нескольких слайдов, текстом и кнопкой. Адаптивный слайдер изображений.",
  "keywords": [
    "image",
    "hero",
    "background",
    "slider",
    "изображение"
  ],
  "supports": {
    "align": [
      "wide",
      "full"
    ],
    "anchor": true,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "slides": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object"
      }
    },
    "autoplay": {
      "type": "boolean",
      "default": true
    },
    "autoplayDelay": {
      "type": "number",
      "default": 5000
    },
    "speed": {
      "type": "number",
      "default": 1000
    },
    "loop": {
      "type": "boolean",
      "default": true
    },
    "pagination": {
      "type": "boolean",
      "default": true
    },
    "navigation": {
      "type": "boolean",
      "default": true
    },
    "showScrollButton": {
      "type": "boolean",
      "default": true
    },
    "minHeight": {
      "type": "number",
      "default": 600
    },
    "overlayOpacity": {
      "type": "number",
      "default": 0.3
    },
    "textColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "contentAlign": {
      "type": "string",
      "default": "center"
    },
    "contentVerticalAlign": {
      "type": "string",
      "default": "center"
    }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css",
  "version": "1.0.0"
}
