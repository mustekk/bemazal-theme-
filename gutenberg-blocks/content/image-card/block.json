{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "bemazal/image-card",
  "title": "Bemazal: Image + Card",
  "category": "bemazal",
  "icon": "align-wide",
  "description": "Блок с изображением и накладывающейся карточкой с контентом",
  "keywords": [
    "bemazal",
    "card",
    "image",
    "layout"
  ],
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "attributes": {
    "mediaID": {
      "type": "number"
    },
    "mediaAlt": {
      "type": "string",
      "default": ""
    },
    "mediaURL": {
      "type": "string",
      "default": ""
    },
    "mediaSize": {
      "type": "string",
      "default": "full"
    },
    "mediaSizes": {
      "type": "object",
      "default": {}
    },
    "aspectRatio": {
      "type": "string",
      "default": "original"
    },
    "imgWidth": {
      "type": "string",
      "default": ""
    },
    "imgHeight": {
      "type": "string",
      "default": ""
    },
    "title": {
      "type": "string",
      "default": ""
    },
    "text": {
      "type": "string",
      "default": ""
    },
    "buttonText": {
      "type": "string",
      "default": ""
    },
    "buttonUrl": {
      "type": "string",
      "default": ""
    },
    "buttonTarget": {
      "type": "boolean",
      "default": false
    },
    "imagePosition": {
      "type": "string",
      "default": "left"
    },
    "textAlign": {
      "type": "string",
      "default": "right"
    },
    "cardOverlap": {
      "type": "string",
      "default": "10"
    }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css"
}